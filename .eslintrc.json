{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "named": "never",
            "anonymous": "always"
          }],
  "indent": 2,
        "quotes": ["error", "double"],
        "multiline-ternary": "off"
    }
}